{
  "manifest_version": 3,
  "name": "Cookie Cruncher",
  "version": "1.0.0",
  "description": "Automatically rejects optional cookies and hides cookie banners.",
  "permissions": [ "storage", "tabs", "contextMenus" ],
  "host_permissions": [ "<all_urls>" ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "coockie_cruncher.js" ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Cookie Cruncher",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    }
  }
}